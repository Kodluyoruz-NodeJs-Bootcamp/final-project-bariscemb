	</header>
	<!-- END | Header -->
	


	<div class="slider movie-items">
		<div class="container">
			<div class="row">
			

				</div>
				<% for (let i =0; i < movies.length; i++) { %>
					<tr>
						<div  class="slick-multiItemSlider">
							<div class="movie-item">

								<div class="mv-img">
									<a href="#"><img src='<%= movies[i].photo %>' alt="" width="285" height="437"></a>
								</div>
								<div class="title-in">
									<div class="cate">
										
									</div>
									<h6><a href="#"><%= movies[i].title %></a></h6>
								</div>
							</div>


							<div>
								<div>
									<h2>Description</h2>
							<p><%= movies[i].description %></p>
								<form method="POST"  action="/myposts/updatemovie/<%= movies[i].id %>">

										<div class="share">
											
											<h4 class= "buster-light">SHARE?</h4>
											<select name="shared">
												<option value="false">No</option>
												<option value="true">Yes</option>
											</select>
										</div>
										<button class="yellowbtn" onclick="return confirm('ARE YOU SURE?')"
										><span>UPDATE</span></button>
									</form>	
									
								</div>

									<form method="POST"  action=" /myposts/deletemovie/<%= movies[i].id %>">
										<button class="redbtn" onclick="return confirm('ARE YOU SURE?')"
										><span>DELETE</span></button>
									</form>	

									</div>
							

						

						</div>
						
				
			<% } %>
			

		
		</div>
	</div>
</div>

