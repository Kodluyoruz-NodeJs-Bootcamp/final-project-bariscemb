<div class="page-single movie_list">
	<div class="container">
		<div class="row ipad-width2">
			<div class="col-md-8 col-sm-12 col-xs-12">
				<div class="topbar-filter">
					<p>Found <span><%=movies.length%> movies</span> and <span><%=actors.length%> actors</span> in total</p>			
					
				</div>

				<% for (let i = 0;  i < movies.length ; i++) { %>
					

					<p class="navbar" ><span>MOVIE LIST</span></p>


					<div class="social-btn">
						<a class="parent-btn" action="/movies/likes/<%= movies[i].id %>" method="POST" >
						
						<form action="/movies/likes/<%= movies[i].id %>" method="POST"   > 
							 
						<button type="submit"  value=1 i class="ion-heart">LIKE</i> </button></a>
						
						  </form>
						  <p class="hero-ct"></i><span> <%= movies[i].like%> like</span> </p>
						
						</div>
					<div class="movie-item-style-2 ">

					
							<img src='<%= movies[i].photo %>'  alt="">


					<div class="mv-item-infor col-md-12">


						<h6><a href="#"><%= movies[i].title %><span>(<%="201"+Math.floor(Math.random() * 10)%>)</span></a></h6>
						<p class="rate"><i class="ion-android-star"></i><span><%=Math.floor(Math.random() * 10)%></span> /10</p>
						<p class="describe"><%= movies[i].description %></p>

						<p class="reviews"> <span>Author:</span> <%= movies[i].commentAuthors%></p>

						<br>
						<p  class="comments"> <span>Comments:<%= movies[i].comments %></span> </p>
					
						
						
						<br>
						<div class="comment-form">
							<h4>Leave a comment</h4>
						
							<form method="POST" action="/movies/comment/<%= movies[i].id %>">
								<div class="row col-md-12">
									<div class="form-style-1">
										<input type="text" name="commentAuthor"  placeholder="Your name">
									<br><br>
										<textarea name="comment"  placeholder="Comment" row="8"></textarea>
									</div>
								</div>
								<div class="form-style-1 col-md-6" >
									<input class="submit" type="submit" value="send">
								  </div>
							</form>
						</div>
	

		
				
				
					  </form>	




						
					</div>
				</div>
				<% } %>




